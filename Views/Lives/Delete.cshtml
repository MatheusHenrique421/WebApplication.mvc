@model WebApplication.mvc.Models.Live

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete a Live</h1>

<h3>Tem certeza de que deseja excluir este registro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            Descrição:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            Instrutor:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instrutor.Nome)
        </dd>
        <dt class="col-sm-2">
            Inscritos:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inscrito.Nome)
        </dd>
        <dt class="col-sm-2">
            Hora Início:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoraInicio)
        </dd>
        <dt class="col-sm-2">
            Duração Minutos:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DuracaoMin)
        </dd>
        <dt class="col-sm-2">
            Valor Inscrição:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorInscricao)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-danger">Voltar</a>
    </form>
</div>
