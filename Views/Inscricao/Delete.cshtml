@model WebApplication.mvc.Models.Inscricao

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete a Inscrição</h1>

<h3>Tem certeza de que deseja excluir este registro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Live:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Live.Nome)
        </dd>
        <dt class="col-sm-2">
            Inscrito:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inscrito.Nome)
        </dd>
        <dt class="col-sm-2">
            Valor Inscrição:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Live.ValorInscricao)
        </dd>
        <dt class="col-sm-2">
            Data Vencimento:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataVencimento)
        </dd>
        <dt class="col-sm-2">
            Status Pagamento:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusPagamento)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-danger">Voltar</a>
    </form>
</div>
