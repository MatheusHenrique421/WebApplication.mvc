@model WebApplication.mvc.Models.Inscricao

@{
    ViewData["Title"] = "Details";
}

<h1>Incrição Detalhada</h1>

<div>    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Live:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Live.Nome)
        </dd>
        <dt class="col-sm-2">
            Inscrito:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inscrito.Nome)
        </dd>
        <dt class="col-sm-2">
            Valor Inscrição:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Live.ValorInscricao)
        </dd>
        <dt class="col-sm-2">
            Data Vencimento:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataVencimento)
        </dd>
        <dt class="col-sm-2">
            Status Pagamento:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusPagamento)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Editar</a>
    <a asp-action="Index" class="btn btn-danger">Voltar</a>
</div>
